<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title><![CDATA[ {{@site.title}} ]]></title>
    <subtitle><![CDATA[ {{@site.description}} ]]></subtitle>
    <link rel="self" type="application/atom+xml" href="{{@site.url}}/atom/?page={{page}}" />    
    <link rel="first" type="application/atom+xml" href="{{@site.url}}/atom/?page=1" />
    {{#if next}}
    <link rel="next" type="application/atom+xml" href="{{@site.url}}/atom/?page={{next}}" />
    {{/if}}
    {{#if prev}}
    <link rel="previous" type="application/atom+xml" href="{{@site.url}}/atom/?page={{prev}}" />
    {{/if}}
    <link rel="last" type="application/atom+xml" href="{{@site.url}}/atom/?page={{pages}}" />
    <link rel="alternate" type="text/html" href="{{@site.url}}" />
    <link rel="license" type="text/html" href="{{@custom.license_url}}" />
    <id>{{@site.url}}/atom/</id>
    <language>{{@site.locale}}</language>
    <generator uri="https://ghost.org" version="5.52">Ghost</generator>
    <updated>{{date format="YYYY-MM-DDTHH:mm:ssZ"}}</updated>
	
	{{#get "posts" limit="25" page="1" order="published_at desc" include="authors,tags"}}
    {{#foreach posts}}
    <entry>
		<title><![CDATA[ {{title}} ]]></title>
		<link href="{{url absolute="true"}}" />
		<id>{{canonical_url}}</id>
        <published>{{published_at}}</published>
		<updated>{{updated_at}}</updated>
		{{#foreach tags}}
		<category term="{{name}}"/>
		{{/foreach}}
        <media:content url="{{feature_image}}" medium="image"/>
        <content type="html"><![CDATA[ <p><img src="{{feature_image}}"></p>{{content}} ]]></content>
        {{#foreach authors}}
		<author>
			<name>{{name}}</name>
			<uri>{{website}}</uri>
		</author>
        {{/foreach}}
	</entry>
    {{/foreach}}
    {{/get}}
</feed>
