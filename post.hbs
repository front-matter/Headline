{{!< default}}

<main class="gh-main">
    {{#post}}
        <article class="gh-article {{post_class}}">

            <header class="gh-article-header gh-canvas">
                {{#if primary_tag}}
                    <a class="gh-article-tag" href="{{primary_tag.url}}">{{primary_tag.name}}</a>
                {{/if}}

                <h1 class="gh-article-title">{{title}}</h1>

                {{> "post-meta"}}

                {{#if custom_excerpt}}
                    <p class="gh-article-excerpt">{{custom_excerpt}}</p>
                {{/if}}

                {{> "feature-image"}}
            </header>

            <section class="gh-content gh-canvas">
                {{content}}

                {{#if @custom.license_url}}
                    <div class="gh-license">
                        Copyright Â© {{date format="YYYY"}} {{#foreach authors}}{{#if @first}}{{name}}{{else}}, {{name}}{{/if}}{{/foreach}}. Distributed under the terms of the
                        <a
                            class="gh-license-link"
                            href="{{@custom.license_url}}"
                        >
                            {{@custom.license_text}}.
                        </a>
                    </div>
                {{/if}}
            </section> 
            </section>

        </article>
    {{/post}}

    {{> "related-posts"}}

    {{#post}}
        {{> "comments"}}
    {{/post}}
</main>